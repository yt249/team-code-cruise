{
  "name": "rb-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:memory": "RB_DATA_MODE=memory tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:gen": "prisma generate --schema=../database/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=../database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=../database/prisma/schema.prisma",
    "lint": "eslint .",
    "pretest": "tsc -p tsconfig.json",
    "test": "RB_DATA_MODE=memory JWT_SECRET=test-secret jest",
    "test:watch": "RB_DATA_MODE=memory JWT_SECRET=test-secret jest --watch",
    "test:ci": "RB_DATA_MODE=memory JWT_SECRET=test-secret jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/core": "^1.15.1",
    "@swc/jest": "^0.2.39",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.18.13",
    "eslint": "^9.11.0",
    "jest": "^29.7.0",
    "prisma": "^5.19.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
